<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grades.GradesGUIController">
    <children>
        <Button fx:id="readGradeFilesButton" layoutX="35.0" layoutY="43.0" onAction="#handleReadGrades" text="Read Grade Files" />
      <Button fx:id="calculateGPAButton" layoutX="42.0" layoutY="100.0" onAction="#handleCalcGPA" text="Calculate GPA" />
      <TextField fx:id="readGradesTextField" layoutX="160.0" layoutY="43.0" opacity="0.5" promptText="File Path" />
      <Label fx:id="GPALabel" layoutX="62.0" layoutY="143.0" text="GPA is: --" />
      <ComboBox fx:id="gradesBox" layoutX="159.0" layoutY="100.0" prefWidth="150.0" />
      <Button fx:id="okButton" layoutX="254.0" layoutY="161.0" mnemonicParsing="false" onAction="#handleOKPressed" prefHeight="26.0" prefWidth="50.0" text="OK" />
      <Button fx:id="minimizeButton" layoutX="182.0" layoutY="161.0" mnemonicParsing="false" onAction="#handleMinimizePressed" text="Minimize" />
    </children>
</AnchorPane>
